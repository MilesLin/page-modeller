{
  "plugins": [
    "@babel/plugin-proposal-optional-chaining",
    ["transform-class-properties", { "spec": true }]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "useBuiltIns": "usage",
        "forceAllTransforms": true,
        "targets": {
          "chrome" : "52",
          "firefox": "48"
        }
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": ["rewire"]
    }
  }
}

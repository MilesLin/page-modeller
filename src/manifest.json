{
  "name": "page-modeller",
  "description": "Chrome and Firefox DevTools extension for modelling page objects",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Page Modeller",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "32": "icons/icon_32.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "devtools_page": "devtools-page.html",
  "permissions": ["activeTab", "tabs", "storage", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
